{
  "root": "apps/back-office/api",
  "sourceRoot": "apps/back-office/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/back-office/api",
        "main": "apps/back-office/api/src/main.ts",
        "tsConfig": "apps/back-office/api/tsconfig.app.json",
        "assets": [
          "apps/back-office/api/src/environments", 
          "apps/back-office/api/src/assets", 
          "apps/back-office/api/src/public"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/back-office/api/src/environments/environment.ts",
              "with": "apps/back-office/api/src/environments/environment.prod.ts"
            },
            {
              "replace": "apps/back-office/api/src/environments/config.ts",
              "with": "apps/back-office/api/src/environments/config.prod.ts"
            },
            {
              "replace": "apps/back-office/api/src/environments/orm-config.ts",
              "with": "apps/back-office/api/src/environments/orm-config.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "back-office-api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/back-office/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/back-office/api"],
      "options": {
        "jestConfig": "apps/back-office/api/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
